{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"lib": ["ES2020", "DOM"],
		"declaration": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"outDir": "./dist",
		"paths": {
			"@/*": ["src/*"],
			"@elo/core": ["../core-ts/src/index.ts"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "src/__mocks__"]
}
